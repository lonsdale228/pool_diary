<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/clientsFragment">
    <fragment
        android:id="@+id/clientsFragment"
        android:name="com.example.pooldiary.fragments.ClientsFragment"
        android:label="fragment_clients"
        tools:layout="@layout/fragment_clients" >
        <action
            android:id="@+id/action_clientsFragment_to_aboutUserActivity"
            app:destination="@id/aboutUserActivity" />
        <action
            android:id="@+id/action_clientsFragment_to_addUserActivity"
            app:destination="@id/addUserActivity" />
    </fragment>
    <activity
        android:id="@+id/aboutUserActivity"
        android:name="com.example.pooldiary.AboutUserActivity"
        android:label="activity_about_user"
        tools:layout="@layout/activity_about_user" />
    <fragment
        android:id="@+id/servicesFragment"
        android:name="com.example.pooldiary.fragments.ServicesFragment"
        android:label="fragment_services"
        tools:layout="@layout/fragment_services" />
    <fragment
        android:id="@+id/chemistryFragment"
        android:name="com.example.pooldiary.fragments.ChemistryFragment"
        android:label="fragment_chemistry"
        tools:layout="@layout/fragment_chemistry" />
    <activity
        android:id="@+id/addUserActivity"
        android:name="com.example.pooldiary.AddUserActivity"
        android:label="activity_add_user"
        tools:layout="@layout/activity_add_user" />
</navigation>